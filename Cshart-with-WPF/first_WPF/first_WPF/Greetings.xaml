<Window x:Class="first_WPF.Greetings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:first_WPF"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="30,20,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" Background="Aquamarine" Width="370" />
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Height="22" Margin="68,95,0,0" VerticalAlignment="Top" Width="108" IsChecked="True"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Height="22" Margin="272,95,0,0" VerticalAlignment="Top" Width="108"/>
        <Button Content="Display" HorizontalAlignment="Left" Margin="178,183,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click"/>

    </Grid>
</Window>
